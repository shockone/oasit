!!!
%html
  %head
    %title Oasit
    = stylesheet_link_tag    'application', :media => "all"
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .container
      %nav.navbar.navbar-default{:role => "navigation"}
        %a.navbar-brand{href: root_path} Oasit
        %a.navbar-brand{href: tickets_path} Tickets
        %a.navbar-brand{href: ticket_statuses_path} Statuses
        %a.navbar-brand{href: departments_path} Departments
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            .navbar-text= current_user.email
            %li
              = link_to("Logout", destroy_user_session_path, :method => :delete)
          - else
            %li
              = link_to('Login', new_user_session_path)
      - if notice
        %p.alert.alert-success= notice
      - if alert
        %p.alert.alert-danger= alert if alert

      = yield
