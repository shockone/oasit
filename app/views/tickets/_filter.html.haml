.col-sm-4
  .panel.panel-default
    .panel-heading Filter
    .panel-body
      = search_form_for @search do |f|
        .input-group
          %span.input-group-addon Subject
          = f.text_field :subject_cont, class: 'form-control'
        %br
        .input-group
          %span.input-group-addon Departments
          = f.collection_select :department_id_in, @departments, :id, :title, {}, { size: @departments.length, multiple: true, class: 'form-control' }
        %br
        .input-group
          %span.input-group-addon Statuses
          = f.collection_select :ticket_status_id_in, @statuses, :id, :name, {}, { size: @statuses.length, multiple: true, class: 'form-control'}
        %br

        = f.submit 'Search', class: 'form-control'